@model IEnumerable<VidyaCat.Models.GameModels.GameListItem>

@{
    ViewBag.Title = "IndexByGenre";
}

<h2>IndexByGenre</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Developer.DeveloperName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Developer.DeveloperName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.GameID }) |
        @Html.ActionLink("Details", "Details", new { id = item.GameID }) |
