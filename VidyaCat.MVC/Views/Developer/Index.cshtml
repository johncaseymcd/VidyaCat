@model IEnumerable<VidyaCat.Models.DeveloperModels.DeveloperListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DeveloperName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink($"{item.DeveloperName}", "IndexByDeveloper", "Game", new { id = item.DeveloperID }, htmlAttributes: new { @class = "indexLink" })
        </td>
        <td>
            @Html.ActionLink($"{item.RegionName}", "IndexByRegion", "Developer", new { id = item.Region }, htmlAttributes: new { @class = "indexLink" })
        </td>
        <td>
            @Html.ActionLink($"{item.Type}", "IndexByType", "Developer", new { id = item.IsMajor }, htmlAttributes: new { @class = "indexLink" })
        </td>
        <td>
            @Html.ActionLink($"{item.Status}", "IndexByStatus", "Developer", new { id = item.IsActive }, htmlAttributes: new { @class = "indexLink" })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DeveloperID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DeveloperID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DeveloperID })
        </td>
    </tr>
}

</table>
